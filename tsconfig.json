{
  "compilerOptions": {
      "strict": true,
      "alwaysStrict": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "removeComments": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "ES2020",
      "outDir": "./build"
  },
  "include": [
      "./src/**/*.ts"
  ],
}
